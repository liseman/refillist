<!-- Modal -->
<div id="shelf-modal" class="modal hide fade" tabindex="-1" role="dialog" aria-labelledby="shelf-ModalLabel" aria-hidden="true">
  <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
    <h3 id="shelf-modalLabel">Add a Shelf</h3>
  </div>
  <div class="modal-body">
    <form id="modal-form">
      <input id="shelf-name" type="text" placeholder="Enter the name for your shelf">
    </form>
    <div class="modal-footer">
      <button type="button" class="btn" data-dismiss="modal" aria-hidden="true">Close</button>
      <a href="#" id="modal-form-submit" class="btn btn-primary">Create Shelf</a>
    </div>
  </div>
</div>
</body>
<!-- add a shelf script -->
<script>
  $('#modal-form-submit').on('click', function(e) {
    e.preventDefault();
    $.ajax({
      url: "/shelf",
      type: "post",
      data: { name: $("#shelf-name").val() },
      success: function(value) {
        console.log(value.id);
        console.log(value.name);
        $('.app-columns').append('<div class="shelf pull-left" id=' + value.id + '><div class="shelf-header">' + value.name + '</div><button class="btn" href="#item-modal" data-toggle="modal" id="add-item" style="margin-left: 10px">Add an Item</button></div>');
      },
    });
    $('#shelf-modal').modal('hide');    
  });
</script>

<!-- add an item script -->
<script>
  $('#modal-form-submit').on('click', function(e) {
    e.preventDefault();
    $.ajax({
      url: "/item",
      type: "post",
      data: { name: $("#item-name").val() },
      success: function(value) {
        console.log(value.id);
        console.log(value.name);
        $('#the id of the specific shelf').prepend('<div class="item-box" id="' + value.id + '">
        <div class="item-image pull-left"><img src="http://placehold.it/100x100"></div>
        <div class="item-title">' + value.name + '</div>
        <div class="item-description clearfix">Gotta put something in here too</div>
        <div>This item has <span class="remaining">35</span>% remaining</div>
      </div>
      },
    });
    $('#shelf-modal').modal('hide');    
  });
</script>
